<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- CSS Files -->
  <link rel="stylesheet" href="/warderndashboard.css" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <div class="main">
    <div class="full-home-page">
      <div class="sidebar">
        <input type="checkbox" name="checkbox" id="check" />
        <div class="btn_one">
          <label for="check">
            <i class="fa-solid fa-bars"></i>
          </label>
        </div>
        <div class="sidebar_menu">
          <div class="logo">
            <a href="#">GatePass</a>
          </div>
          <div class="btn_two">
            <label for="check">
              <i class="fa-solid fa-xmark"></i>
            </label>
          </div>
          <div class="menu">
            <div class="hover">
              <i class="fa-solid fa-house"><a href="#"></a></i>
              <div style="display: flex" id="responsive">
                <a class="res" href="http://localhost:8081/studenthome">Home</a>
              </div>
            </div>
            <div class="hover">
              <i class="fa-solid fa-right-from-bracket"><a href="#"></a></i>
              <div style="display: flex" id="responsive">
                <a class="res" href="http://localhost:8081/">Log Out</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="full-conatiner">
        <% for(let studata of studat){ %>

          <div class="information-deshboard">
            <div class="id-date">
              <div class="id">
                <p>
                  <%=studata._id%>
                </p>
              </div>
              <div class="date">
                <p>
                  <%= new Date(studata.time).toLocaleString('en-US', { dateStyle: 'medium' , timeStyle: 'short' }) %>
                </p>
              </div>
            </div>
            <div>
              <div class="all-information">
                <div class="name">
                  <p>Name:</p>
                  <p>
                    <%=studata.fName%>
                      <%=studata.lName%>
                  </p>
                </div>

                <div class="usn" style="width: 20%; padding: 10px 10px;">
                  <p>USN:</p>
                  <p>
                    <%=studata.usn%>
                  </p>
                </div>

                <div class="sem-sec" style="width: 20%; padding: 10px 10px;">
                  <p>Class:</p>
                  <p>
                    Sem : <%=studata.sem%> and Sec : <%=studata.section%>
                  </p>
                </div>

                <div class="pov">
                  <p>Visited </p>
                  <p>
                    <%=studata.pOV%>
                  </p>
                </div>
              </div>
            </div>

            <!-- ACTION AREA -->
            <div class="approval-section">

              <!-- STATUS DISPLAY -->
              <div class="approval-box">
                <p
                  class="<%= studata.Status === 'Approved' ? 'status-approved' : studata.Status === 'Rejected' ? 'status-rejected' : 'status-pending' %>">
                  Status: <%= studata.Status %>
                </p>
              </div>

              <!-- DELETE BUTTON -->
              <form action="/student/delete" method="POST" onsubmit="return confirm('Delete this record permanently?')">
                <input type="hidden" name="id" value="<%= studata._id %>" />
                <button class="delete-btn">Delete</button>
              </form>

            </div>
          </div>

          <% } %>

      </div>
    </div>
  </div>
  <script src="app.js"></script>
</body>

</html>