<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />

    <!-- CSS Files -->
    <link rel="stylesheet" href="/warderndashboard.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <div class="main">
      <div class="full-home-page">

        <!-- SIDEBAR -->
        <div class="sidebar">
          <input type="checkbox" id="check" />

          <div class="btn_one">
            <label for="check"><i class="fa-solid fa-bars"></i></label>
          </div>

          <div class="sidebar_menu">

            <div class="logo">
              <a href="#">GatePass</a>
            </div>

            <div class="btn_two">
              <label for="check"><i class="fa-solid fa-xmark"></i></label>
            </div>

            <div class="menu">

              <div class="hover">
                <i class="fa-solid fa-house"></i>
                <a class="res" href="/adminhome">Home</a>
              </div>

              <div class="hover">
                <i class="fa-solid fa-right-from-bracket"></i>
                <a class="res" href="/">Log Out</a>
              </div>

            </div>
          </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="full-conatiner">

          <% studat.forEach(studata => { %>

          <!-- Single Card -->
          <div class="information-deshboard">

            <!-- ID + DATE -->
            <div class="id-date">
              <div class="id"><p><%= studata._id %></p></div>

              <div class="date">
                <p>
                  <%= new Date(studata.time).toLocaleString("en-US", {
                        dateStyle: "medium",
                        timeStyle: "short",
                  }) %>
                </p>
              </div>
            </div>

            <!-- STUDENT INFORMATION -->
            <div class="all-information">

              <div class="name">
                <p>Name:</p>
                <p><%= studata.fName %> <%= studata.mName %> <%= studata.lName %></p>
              </div>

              <div class="mode">
                <p>Pass Mode:</p>
                <p><%= studata.mode %></p>
              </div>

              <div class="pov">
                <p>Visited:</p>
                <p><%= studata.pOV %></p>
              </div>
            </div>

            <!-- ACTION AREA -->
            <div class="approval-section">

              <!-- APPROVAL BOX -->
              <div class="approval-box">

                <% if (studata.Status === "pending") { %>

                <form action="/ward" method="POST">
                  <input type="hidden" name="id" value="<%= studata._id %>" />

                  <select class="approval-select" name="decision" required>
                    <option value="">Admin Approval</option>
                    <option value="Approve">Approve</option>
                    <option value="Reject">Reject</option>
                  </select>

                  <button class="approval-submit" type="submit">Submit</button>
                </form>

<% } else { %>

<p class="<%= studata.Status === 'Approve' ? 'status-approved' : 'status-rejected' %>">
  Status: <%= studata.Status %>
</p>

<% } %>


              </div>

              <!-- DELETE BUTTON -->
              <form
                action="/admin/delete"
                method="POST"
                onsubmit="return confirm('Delete this record permanently?')"
              >
                <input type="hidden" name="id" value="<%= studata._id %>" />
                <button class="delete-btn">Delete</button>
              </form>

            </div>
          </div>

          <% }) %>

        </div>
      </div>
    </div>
  </body>
</html>
